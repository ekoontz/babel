{
 "ci"
 [{:synsem {:cat :noun
            :pronoun true
            :agr {:person :1st
                  :number :plur}
            ;; note: no '[:sem :pred]' here:
            ;; reflexive pronouns should not have
            ;; an explicit pred: they structure-share
            ;; the pred with the subject,
            ;; e.g. "Luisa e io ci svegliamo",
            ;; the [:sem :pred] is :luisa-e-io, not :noi.
            :reflexive true}}

  ;; singular "ci" is contracted to c' (e.g. 'c'Ã¨')
  {:synsem {:cat :noun
            :pronoun true
            :case :nom
            :sem {:null true
                  :pred :existential}
            :agr {:person :3rd
                  :number :sing}
            :reflexive true}}
  {:synsem {:cat :noun
            :pronoun true
            :case :nom
            :sem {:null true
                  :pred :existential}
            :agr {:person :3rd
                  :number :plur}}}]

 "Giovanni e io"
 [{:synsem {:cat :noun
            :pronoun true
            :case :nom
            :agr {:gender :masc
                  :person :1st
                  :number :plur}
            :sem {:prop {:human true}
                  :pred :giovanni-and-i}
            :subcat []}}]
 "io"
 [{:synsem {:cat :noun
            :pronoun true
            :case :nom
            :agr {:gender :fem
                  :person :1st
                  :number :sing}
            :sem {:pred :I
                  :prop {:human true}}
            :subcat []}}

  {:synsem {:cat :noun
            :pronoun true
            :case :nom
            :agr {:gender :masc
                  :person :1st
                  :number :sing}
            :sem {:pred :I
                  :prop {:human true}}
            :subcat []}}]
 "la"
 ;; 1. pronoun: human
 [{:synsem {:cat :noun
            :pronoun true
            :case :acc
            :reflexive false
            :agr {:gender :fem
                  :person :3rd
                  :number :sing}
            :sem {:prop {:human true}
                  :pred :lei}
            :subcat []}
   :italiano {:initial true}}   

  ;; 2. pronoun: non-human
  {:synsem {:cat :noun
            :pronoun true
            :case :acc
            :reflexive false
            :agr {:gender :fem
                  :person :3rd
                  :number :sing}
            :sem {:prop {:human false}
                  :place false ;; "they go to it (loro vanna a la)" sounds strange
                  :pred :lei}
            :subcat []}
   :italiano {:initial true}}]

 "lei"
 (let [common {:synsem {:cat :noun
                        :pronoun true
                        :case :nom
                        :agr {:person :3rd
                              :gender :fem
                              :number :sing}
                        :sem {:pred :lei}
                        :subcat []}}]
   [{:unify [common]
     :synsem {:sem {:prop {:human false}}}}
    {:unify [common]
     :synsem {:sem {:prop {:human true}}}}])

