 {:p [#"^c$" "ci"] ;; "c'" -> "ce"
  :u {:synsem {:cat :noun
               :case :nom}}}

 {:p [#"^l$" "la"] ;; "l'" -> "la"
  :u {:synsem {:cat :noun
               :pronoun true
               :case :acc
               :agr {:number :sing
                     :gender :fem}}}}
 
 {:p [#"^l$" "lo"] ;; "l'" -> "lo"
  :u {:synsem {:cat :noun
               :pronoun true
               :case :acc
               :agr {:number :sing
                     :gender :masc}}}}

