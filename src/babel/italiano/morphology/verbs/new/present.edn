      #"(.*)sci$"         "$1re" ;; finisci -> finire
      #"(.*)i$"           "$1irsi" ;; diverti -> divertirsi
      #"(.*)ici$"         "$1ire" ;; dici -> dire
      #"(.*)hi$"          "$1are" ;; pieghi -> piegare
      ]}

